<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pokemonram.pokeram">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/rotomdex"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PokemonMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PokedexActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".MovesActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".AbilitiesActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".TeamActivity" />
        <activity android:name=".DetailedPokemonActivity"
            />
        <activity android:name=".MovesDetailActivity"
            android:windowSoftInputMode="adjustPan"/>
    </application>

</manifest>